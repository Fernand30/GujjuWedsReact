<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/fab_color_pressed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>

    </style>

    <style name="AppTheme.NoActionBar.ProfileImages">
        <item name="windowActionBar">false</item>

    </style>

    <style name="dialog_theme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="EditProfileActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/editProfilePrimary</item>
        <!--<item name="colorPrimaryDark">@color/editProfileDark</item>-->
        <!--<item name="colorAccent">@color/editProfilePrimary</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="WelcomeScreenHeaderTextStyle">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="UserStatsTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ThemeOverlay.AppCompat.Dark.ActionBar.InverseControls">
        <item name="colorControlNormal">?android:attr/textColorSecondaryInverse</item>
        <item name="colorControlHighlight">@color/ripple_material_light</item>
    </style>

    <style name="PrefTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat">-->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar.InverseControls
        </item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHighlight">@color/text_highlight</item>

        <item name="alertDialogTheme">@style/PrefTheme.Dialog.Alert</item>
        <item name="dialogTheme">@style/PrefTheme.Dialog</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>

        <!--<item name="colorPreferenceStyle">-->
        <!--@style/Preference.Material.DialogPreference.ColorPreference-->
        <!--</item>-->

        <!--<item name="android:textAppearanceMedium">?textAppearanceListItem</item>-->
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TextAppearance.AppCompat.Subhead.Inverse
        </item>

        <item name="asp_preferenceIconTint">?colorAccent</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
    </style>

    <style name="PrefTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="PrefTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_dark</item>-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHighlight">@color/text_highlight</item>

        <!--<item name="android:textAppearanceMedium">?textAppearanceListItem</item>-->
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TextAppearance.AppCompat.Subhead.Inverse
        </item>
    </style>

    <style name="PrefTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorPrimary">@color/primary</item>-->
        <!--<item name="colorPrimaryDark">@color/primary_dark</item>-->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHighlight">@color/text_highlight</item>

        <!--<item name="android:textAppearanceMedium">?textAppearanceListItem</item>-->
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TextAppearance.AppCompat.Subhead.Inverse
        </item>
    </style>

    <style name="Popup" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup</item>
    </style>

</resources>
